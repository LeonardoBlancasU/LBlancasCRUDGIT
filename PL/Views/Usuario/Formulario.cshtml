@model ML.Usuario
@{
    ViewBag.Title = "Formulario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h2>Usuario</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <h4>Ingrese los datos del Usuario</h4>
        </div>
    </div>
    @using (Html.BeginForm("Formulario", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation", novalidate = "novalidate" }))
    {
        <div class="row">
            <input type="hidden" name="IdUsuario" value="@Model.IdUsuario" />
        </div>

        <div class="col-12 col-md-6 col-lg-4 mb-3">
            @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
            <div class="input-group mb-3 has-validation">
                <span class="input-group-text bi bi-person" id="basic-addon1" style="color: #006eff"></span>
                @Html.TextBoxFor(model => model.Nombre, new { required = "required", placeholder = "Ingresa un Nombre", @class = "form-control", @id = "txtUserName", @onkeydown = "return ValidarUserName(event, 'lblErrorUserName', 'txtUserName', '8')", @onblur = "AgregarGuion(event, 'txtUserName')" })
            </div>
            @Html.LabelFor(model => model.Apellido, new { @class = "form-label" })
            <div class="input-group mb-3 has-validation">
                <span class="input-group-text bi bi-person" id="basic-addon1" style="color: #006eff"></span>
                @Html.TextBoxFor(model => model.Apellido, new { required = "required", placeholder = "Ingresa un Apellido", @class = "form-control", @id = "txtUserName", @onkeydown = "return ValidarUserName(event, 'lblErrorUserName', 'txtUserName', '8')", @onblur = "AgregarGuion(event, 'txtUserName')" })
            </div>
            @Html.LabelFor(model => model.FechaNacimiento, new { @class = "form-label" })
            <div class="input-group mb-3 has-validation">
                <span class="input-group-text bi bi-calendar3" id="basic-addon1" style="color: #006eff"></span>
                @Html.TextBoxFor(model => model.FechaNacimiento, new { required = "required", @type = "date", @class = "form-control", @id = "txtUserName", @onkeydown = "return ValidarUserName(event, 'lblErrorUserName', 'txtUserName', '8')", @onblur = "AgregarGuion(event, 'txtUserName')" })
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-2">
                <input type="submit" value="Guardar" class="btn btn-outline-success" id="btnGuardar" />
            </div>

            <div class="col-2">
                @Html.ActionLink("Regresar", "GetAll", "Usuario", new { @class = "btn btn-outline-danger" })
            </div>


            @if (TempData["Actualizado"] != null)
            {
                <div class="alert alert-success">
                    <i class="bi bi-send"> @TempData["Actualizado"]</i>
                </div>
             }

        </div>
    }
</div>

